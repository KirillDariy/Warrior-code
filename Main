#All the important custom functions

def textslow(): #TO MAKE TEXT PRINT CHARACTER BY CHARACTER
    sys.stdout.write(char)
    sys.stdout.flush()
    time.sleep(text_speed)

def witch(): #THIS FUNCTION IS FOR THE WITCH

    global character_health
    global strength 

    def textslow():
        sys.stdout.write(char)
        sys.stdout.flush()
        time.sleep(text_speed)

    for char in 'A witch just apeared in the middle of nowhere,\nAnd they will give you a random potion\nOne of the three potions that the witch will give you is | strength | health | or weakness |\nDrum roll please ':
        textslow()

    for i in range(3):
        time.sleep(0.5)
        print('.', end =' ')

    random_potion = random.randint(1,3)
    if random_potion == 1: #Strength
        for char in '\n\nYou got 5 strength from the witch!':
            textslow()
        strength += 5

    elif random_potion == 2: #Health
        for char in '\n\nYou got 10 health from the witch!':
            textslow()
        character_health += 10

    else: #negative effects
        for char in '\n\nYou got a weakness potion that dealt 5 strength and 5 health!':
            textslow()
        character_health -= 5
        strength -= 5
    for char in '\n\nHere are you current stats: \n':
        textslow()
    print(tGold + '\n-------------------')
    print(tRed + 'Strength: ' , strength)
    print(tGreen + 'Health: ', character_health)
    print(tGold + '-------------------\n\n\n' + default_font)

def mathprob(): ### THIS IS THE MATH PROBLEM

    def textslow():
        sys.stdout.write(char)
        sys.stdout.flush()
        time.sleep(text_speed)
    
    def inputNumber(message): #THIS IS ERROR CORRECTION FOR FOOL PROOF
        while True:
            try:
                userInput = int(input(message))

            except ValueError:
                print('\nPlease try again\n')
                continue
            else:
                return userInput 
                break

    num1 = random.randint(1,100)
    num2 = random.randint(1,100)
    for char in 'Add these 2 numbers\n':
        textslow()
    print(num1)
    print('+')
    print(num2)
    num_input = inputNumber('Enter sum here: ')
    num_ans = num1 + num2
    if num_input == num_ans:
        for char in 'You are correct,\nbut you don\'t get anything because I am not that nice.\n':
            textslow()
    else:
        for char in 'You are incorrect,\nbut as a little tip, you could improve your math skills.\n ':
            textslow()
        time.sleep(1)
        for char in 'Harsh man\n':
            textslow()

def randomHouse(): #THIS FUNCTION IS FOR RANDOM HOUSE PLACE

    global character_health
    global strength 

    def textslow():
        sys.stdout.write(char)
        sys.stdout.flush()
        time.sleep(text_speed)

    for char in 'You just found a random house!\nYou will now find a random potion that you will have to drink and make a decision about it\n\nLet\'s find out what colour is the potion\n\n':
        textslow()
    time.sleep(0.5)
    potion_colour = random.choice(['Red','Blue','Green','Purple','Yellow','Black'])
    for char in 'The colour is ':
        textslow()
    print(potion_colour)

    while True:
        for char in 'Would you like to drink the random potion? (Y|N): ':
            textslow()
        yes = input().lower()
        if yes in ('y','n'):
            break

    if yes == 'y':
        for char in '\nYou decided to drink the potion. Let\'s see what the effects are.\n':
            textslow()
        potion = random.choice(['h','s','d'])
        
        if potion == 'h':
            for char in 'It was a health potion and you got 15 health for it\nCongrats.\n':
                textslow()
            character_health += 15
        elif potion == 's':
            for char in 'It was a strength potion and you got 15 strength\nLucky person!\n':
                textslow()
            strength += 15
        else: #This is the Damage one
            for char in 'Unfortunately you got a damage potion and your health has been reduced by 20\n':
                textslow()
            character_health -= 20
    else: #If you skip it
        for char in 'You decided to skip the house, that means that you will not get anything.\n':
            textslow()
    for char in '\nHere are your current stats:\n':
        textslow()
    print(tGold + '\n-------------------')
    print(tRed + 'Strength: ' , strength)
    print(tGreen + 'Health: ', character_health)
    print(tGold + '-------------------\n\n\n' + default_font)
start_health = 60
end_health = 190
enemy_damage = 20

def enemy():### THIS FUNCTION IS FOR THE ENEMY

    global character_health
    global strength 
    global start_health
    global end_health
    global enemy_damage

    def textslow(): #TO MAKE TEXT PRINT CHARACTER BY CHARACTER
        sys.stdout.write(char)
        sys.stdout.flush()
        time.sleep(text_speed)

    monster_health = random.randint(start_health,end_health)
    monster_name = random.choice(['Rob', 'Rick', 'Bob', 'Michael', 'Boomer','Zoomer', 'Epic Games','Kirill', 'Eric', 'Shon','Chris','Jimmy','Thomas','Cray','Rose','Diabetes','Life good','Simon','Rusu','Daniel','Evan','Fridman','Max','John','Ryan','Trisha','Rachel','Armen','Liam','Noah','Lucas'])
    for char in 'You have to fight an enemy because you chose the wrong path\nYou will have to use your strength to kill them\n\nThe name of the monster is: ':
        textslow()
    print(monster_name)
    for char in '\nIf you win the battle, you will get a bit of strength and health as a reward\n\n':
        textslow()
    for char in '\nUse your skills very wisely to not lose health because you will have to fight the final boss later.\nIf you die right now, then you will not be able to continue!\n\nThe monster has ':
        textslow()
    print(monster_health , 'health,', end =' ')
    for char in 'and deals ':
        textslow()
    print(enemy_damage, end ='')
    for char in ' damage\n':
        textslow()
    for char in 'You have ':
        textslow()
    print(character_health, 'health and', end = ' ')
    for char in 'you deal ':
        textslow()
    print(strength, 'damage')

    while monster_health > 0:
        while True:
            action = input('\nUse Q to defend and E to attack: ').lower()
            if action == 'q': #Defend
                for char in '\nYou chose to defend,\n':
                    textslow()
                monster_action = random.randint(1,2) # 50/50 chance of the action of the monster
                if monster_action == 1:
                    for char in 'The monster also chose to defend\n\nIn the end, nothing happened\n':
                        textslow()
                elif monster_action == 2:
                    for char in 'The monster chose to attack, they only did 10 health of damage through your shield\nYou also ended up doing 10 damage to the monster because you caught him off guard\n':
                        textslow()
                    character_health -= 10
                    monster_health -= 10
                    for char in '\nYou only have ':
                        textslow()
                    print(character_health, 'health left')
                    for char in 'The monster still has ':
                        textslow()
                    print(monster_health ,'health left')
                    if monster_health <= 0: #If the monster dies
                        for char in 'Good job, you killed the monster!\nYou may continue on your journey\nYou will now get a random amount of strength from the monster and 50 health\n':
                            textslow()
                        random_strength = random.randint(5,10)
                        print('You will get ', random_strength , 'strength!')
                        character_health += 50
                        strength = strength + random_strength
                        break
                    else:
                        for char in '\nKeep on trying\n':
                            textslow()
            elif action == 'e': #if action is e (attacking)
                monster_health = monster_health - strength
                for char in '\nYou chose to attack the monster.\nYou dealt ':
                    textslow()
                print(strength, 'damage', end = ' ')
                for char in 'to the monster\n':
                    textslow()
                monster_action = random.randint(1,2) #50/50 chance of luck
                if monster_health <= 0: #If the monster dies
                    for char in '\nGood job, you killed the monster!\nYou may continue on your journey\n\nYou will now get a random amount of strength from the monster and 50 health\n':
                        textslow()
                    random_strength = random.randint(5,10)
                    print(random_strength, 'is the amount of strength you will get.')
                    character_health += 50
                    strength = strength + random_strength
                    break
                elif monster_action == 1:
                    for char in 'The monster just watched you fight them\n':
                        textslow()
                    time.sleep(0.5)
                    for char in 'He was just lazy\n\nThe monster still has ':
                        textslow()
                    print(monster_health ,'health left')
                    for char in 'You have ':
                        textslow()
                    print(character_health, 'health left')
                    for char in 'Keep on trying\n':
                        textslow()
                else: #If monster_actioin == 2:
                    for char in 'The monster didn\'t like what you did so he also decided to attack you aswell. He did 20 health of damage to you.\n\nThe monster still has ':
                        textslow()
                    character_health -= 20
                    print(monster_health ,'health left')
                    for char in 'You have ':
                        textslow()
                    print(character_health, 'health left')
                    for char in 'Keep on trying\n':
                        textslow()
            else:
                print()

    for char in '\nHere are you current stats: \n':
        textslow()
    print(tGold + '\n-------------------')
    print(tRed + 'Strength: ' , strength)
    print(tGreen + 'Health: ', character_health)
    print(tGold + '-------------------\n\n\n' + default_font)
    start_health += 25
    end_health += 25
    enemy_damage += 10

#part of map() function, there is no point for this to be repeated

xfactor = tRed + Bold + 'X' + default_font + tGold
checkmark = Bold + tCyan + '✓' + default_font + tGold 
tiles = []
for i in range(121):
    tiles.append('?')
tiles[60] = xfactor

def map():
    count = 0
    for i in tiles:
        if tiles[count] == xfactor:
            tiles[count] = checkmark
        count += 1
    coord = 121-11*(y)+x
    tiles[coord-1] = xfactor
    print(tGold + ' _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _ _')
    print('|     |     |     |     |     |     |     |     |     |     |     |')
    print('|  ',end='')
    print(*tiles[0:11], sep = '  |  ', end='  |\n'  ) #1st row
    print('|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|')
    print('|     |     |     |     |     |     |     |     |     |     |     |')
    print('|  ',end='')
    print(*tiles[11:22], sep = '  |  ', end='  |\n'  )  #2nd row
    print('|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|')
    print('|     |     |     |     |     |     |     |     |     |     |     |')
    print('|  ',end='')
    print(*tiles[22:33], sep = '  |  ', end='  |\n'  )  #3rd row
    print('|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|')
    print('|     |     |     |     |     |     |     |     |     |     |     |')
    print('|  ',end='')
    print(*tiles[33:44], sep = '  |  ', end='  |\n'  )  #4th row
    print('|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|')
    print('|     |     |     |     |     |     |     |     |     |     |     |')
    print('|  ',end='')
    print(*tiles[44:55], sep = '  |  ', end='  |\n'  )  #5th row
    print('|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|')
    print('|     |     |     |     |     |     |     |     |     |     |     |')
    print('|  ',end='')
    print(*tiles[55:66], sep = '  |  ', end='  |\n'  )  #6th row
    print('|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|')
    print('|     |     |     |     |     |     |     |     |     |     |     |')
    print('|  ',end='')
    print(*tiles[66:77], sep = '  |  ', end='  |\n'  )  #7th row
    print('|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|')
    print('|     |     |     |     |     |     |     |     |     |     |     |')
    print('|  ',end='')
    print(*tiles[77:88], sep = '  |  ', end='  |\n'  ) #8th row
    print('|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|')
    print('|     |     |     |     |     |     |     |     |     |     |     |')
    print('|  ',end='')
    print(*tiles[88:99], sep = '  |  ', end='  |\n'  )  #9th row
    print('|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|')
    print('|     |     |     |     |     |     |     |     |     |     |     |')
    print('|  ',end='')
    print(*tiles[99:110], sep = '  |  ', end='  |\n'  )  #10th row
    print('|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|')
    print('|     |     |     |     |     |     |     |     |     |     |     |')
    print('|  ',end='')
    print(*tiles[110:121], sep = '  |  ', end='  |\n'  )  #11th row
    print('|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|_ _ _|\n')

    print(default_font + 'Your current location is marked with: ', xfactor + default_font)
    print('Previous locations have been marked with: ', checkmark + default_font, '\n\n')


