    for char in 'And deals 55 damage\nWhile you have ':
        textslow()
    print(character_health, 'health and', end = ' ')
    print(strength, 'damage')

    while monster_health > 0:
        if character_health > 0:
            action = input('Use Q to defend and E to attack: ').lower()
            if action == 'q': #Defend
                for char in 'You chose to defend\n':
                    textslow()
                monster_action = random.randint(1,2) # 50/50 chance of the action of the monster
                if monster_action == 1:
                    for char in 'The monster also chose to defend\nYou just looked very deeply into thier eyes.\n':
                        textslow()
                elif monster_action == 2:
                    for char in 'The monster chose to attack, they only did 40 health of damage through your shield\nYou ended up doing 30 damage to the monster because you caught him off guard and the crowd is cheering for you.\n':
                        textslow()
                    character_health -= 40
                    monster_health -= 30
                    for char in 'You only have ':
                        textslow()
                    print(character_health, 'health left')
                    for char in 'The monster still has ':
                        textslow()
                    print(monster_health ,'health left')
