                            textslow()
                    else:
                        for char in 'Keep on trying.\nYou have to kill him!\n':
                            textslow()
            else: #if action is e (attacking)
                monster_health = monster_health - strength
                for char in 'You chose to attack the monster.\nYou dealt ':
                    textslow()
                print(strength, 'damage')
                for char in 'To the monster\nAnd keep it up!\n\n':
                    textslow()
                monster_action = random.randint(1,2) #50/50 chance of luck
                if monster_health <= 0: #If the monster dies
                    for char in 'Good job, you killed the final boss!\n':
                        textslow()
